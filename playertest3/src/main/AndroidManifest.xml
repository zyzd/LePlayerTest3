            android:name="com.example.test.activity.ListPlayerViewActivity"
            android:configChanges="keyboard|screenSize|orientation|layoutDirection|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.test.activity.MorePlayerActivity"
            android:configChanges="keyboard|screenSize|orientation|layoutDirection|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.lecloud.ad.WebViewActivity"
            android:configChanges="keyboard|screenSize|orientation|layoutDirection"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <!-- Feed back Activity -->
        <activity
            android:name="com.letv.skin.activity.FeedBackActivity"
            android:configChanges="keyboard|screenSize|orientation|layoutDirection"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <service
            android:name="com.letvcloud.cmf.MediaService"
            android:process=":cmf" />
        
        <service android:name="com.lecloud.download.control.LeDownloadService" >
            <intent-filter>
                <action android:name="Ledownload.service.action" />
            </intent-filter>
        </service>

        <service
            android:name="com.squareup.leakcanary.internal.HeapAnalyzerService"
            android:enabled="false"
            android:process=":leakcanary" />
        <service
            android:name="com.squareup.leakcanary.DisplayLeakService"
            android:enabled="false" />
    </application>

</manifest>